# Arquivo .env.example - copie para .env e preencha seus valores

# ===== Google Drive =====
# Caminho para credentials.json obtido do Google Cloud Console
CREDENTIALS_PATH=./config/credentials.json

# Caminho para pasta DICOM de entrada
GD_FOLDER=Medicina/Doutorado IDOR/Exames/DICOM

# Caminho para pasta NIfTI de saída
GD_OUTPUT_FOLDER=Medicina/Doutorado IDOR/Exames/NifTI

# ===== Processing =====
# Número de workers para download (I/O-bound)
MAX_WORKERS_DL=5

# Número de workers para upload (I/O-bound)
MAX_WORKERS_UL=3

# Número de workers para processamento (CPU-bound)
# Recomendado: cpu_count() - 2
MAX_WORKERS_PROC=6

# ===== Timeouts (segundos) =====
TIMEOUT_DL=300        # 5 minutos
TIMEOUT_CONV=600      # 10 minutos
TIMEOUT_UL=300        # 5 minutos

# ===== Rate Limiting =====
# Requisições por segundo para Google Drive API
RATE_LIMIT=5

# ===== Retry =====
MAX_RETRIES=3
RETRY_BACKOFF=2

# ===== Diretórios =====
TEMP_DIR=./temp
LOG_DIR=./logs

# ===== Cache =====
# TTL para cache de pasta listings (horas)
CACHE_TTL=24

# ===== Logging =====
LOG_LEVEL=INFO
# LOG_FORMAT_JSON=false  # Descomente para JSON output

# ===== Opcionales =====
# Para alertas (email, Slack, etc)
# ALERT_EMAIL=seu-email@example.com
# SLACK_WEBHOOK_URL=https://hooks.slack.com/...
